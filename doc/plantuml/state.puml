@startuml

[*] --> Off
Off --> On : turnOn()
On --> Off : turnOff()
On --> Washing  : wash()
Washing --> Paused : openDoor()
Paused --> Washing : closeDoor()
Washing --> Off : turnOff()

@enduml

@startuml

abstract class State {
    #stateName : String
    {abstract} turnOn() : State
    {abstract} turnOff() : State
    {abstract} wash() : State
    {abstract} openDoor() : State
    {abstract} closeDoor() : State
    getStateName() : String
}

@enduml